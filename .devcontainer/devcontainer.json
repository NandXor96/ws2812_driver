// Configuration of the development container
{
    "name": "Kernel",
    "build": {
        "dockerfile": "Dockerfile"
    },
    //"build": {
    //    "dockerfile": "Dockerfile"
    //},
    "postCreateCommand": [
        "/bin/bash",
        "-c",
        "echo TEST && sudo chmod 777 /var/run/docker.sock && sudo usermod -a -G sudo vscode && chmod -R u+x /home/vscode/workspace/.devcontainer/*.sh && chmod -R u+x /home/vscode/workspace/*.sh"
    ],
    "runArgs": [
        "--privileged",
        "-e",
        "DISPLAY=${env:DISPLAY}",
        "--device=/dev/dri:/dev/dri",
        "--device=/dev/loop0:/dev/loop0",
        "--device=/dev/kvm:/dev/kvm",
        //"--device=/dev/bus:/dev/bus",
        "-v",
        "/dev/bus/usb:/dev/bus/usb", // Damit neue USB-Ger√§te erkannt werden
        "-v",
        "/run/udev/:/run/udev/:ro",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ajshort.include-autocomplete",
                "amiralizadeh9480.cpp-helper",
                "CoenraadS.bracket-pair-colorizer-2",
                "cschlosser.doxdocgen",
                "eamodio.gitlens",
                "ryu1kn.text-marker",
                "shardulm94.trailing-spaces",
                "mkxml.vscode-filesize",
                "trietho.file-size-explorer",
                "foxundermoon.shell-format",
                "Gruntfuggly.todo-tree",
                "jbockle.jbockle-format-files",
                "vjeff-hykin.better-cpp-syntax",
                "josetr.cmake-language-support-vscode",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools-themes",
                "psioniq.psi-header",
                "redhat.vscode-yaml",
                "twxs.cmake",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode",
                "ms-vscode.makefile-tools",
                "betwo.vscode-linux-binary-preview",
                "meronz.manpages",
                "xaver.clang-format",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "workspaceFolder": "/home/vscode/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace,type=bind,consistency=cached",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/var/run/libvirt,target=/var/run/libvirt,type=bind,consistency=cached"
    ],
    "remoteUser": "vscode",
    "overrideCommand": false
}